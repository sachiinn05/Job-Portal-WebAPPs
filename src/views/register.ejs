<div class="outer">
    <div class="outer-container">
      <div class="inner-container">
          <div class="login-header">
              <h1>Sign-up</h1>
          </div>
          <div class="login-main">
              <form action="/register" method="post">
                  <div class="mb-3">
                      <label for="name" class="form-label">Name</label>
                      <input required type="name" class="form-control" id="name" name="name" placeholder="Enter your name">
                    </div>
                    <div class="mb-3">
                      <label for="email" class="form-label">Email-ID</label>
                      <input required type="email" class="form-control" id="email" name="email" placeholder="Enter your email">
                    </div>
                    <div class="mb-3">
                      <label for="password" class="form-label">Password</label>
                      <input required type="password" class="form-control" id="password" name="password" placeholder="Enter your password">
                    </div>
                    <div class="submit">
                      <button type="submit" class="btn btn-success">Submit</button>
                    </div>
              </form>
          </div>
      </div>
  </div>
  </div>