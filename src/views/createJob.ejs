<div class="outer-container">
    <div class="inner">
        <div class="update-header">
            <h1>Post New Job</h1>
        </div>
        <div class="update-main">
            <form class="row g-3" action="/postJob" method="post">
                <div class="col-md-6">
                  <label for="designation" class="form-label">Job Designation</label>
                  <input type="text" class="form-control" id="designation" name="designation" >
                </div>
                <div class="col-md-6">
                  <label for="location" class="form-label">Job Location</label>
                  <input type="text" class="form-control" id="location" name="location" >
                </div>
                <div class="col-12">
                  <label for="skills" class="form-label">Skills Required</label>
                  <input type="text" class="form-control" id="skills" name="skills" >
                </div>
                <div class="col-md-4">
                  <label for="salary" class="form-label">Salary</label>
                  <input type="text" class="form-control" id="salary" name="salary" >
                </div>
                <div class="col-md-4">
                  <label for="requiredApplicants" class="form-label">No of Positions</label>
                  <input type="number" class="form-control" id="requiredApplicants" name="requiredApplicants" >
                </div>
                <div class="col-md-4">
                  <label for="lastDate" class="form-label">Last Date</label>
                  <input type="date" class="form-control" id="lastDate" name="lastDate" >
                </div>
                <div class="col-md-12">
                    <label for="companyName" class="form-label">Company Name</label>
                    <input type="text" class="form-control" id="companyName" name="companyName" >
                </div>
                <div class="col-md-12">
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
            </form>
        </div>
    </div>
</div>